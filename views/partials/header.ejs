<header id="top-header">
    <span class="siteName">
      <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
      <a title="Click to log in" href="/account/login">My Account</a>
    </div>
    <nav>
      <ul>
          <!-- Always visible links (e.g., Home, Shop) -->
          <li><a href="/home">Home</a></li>
          <li><a href="/shop">Shop</a></li>
  
          <% if (typeof clientData !== 'undefined' && clientData) { %>
              <!-- Visible only when the client is logged in -->
              <li><a href="/account-management">Welcome, <%= clientData.firstName %></a></li>
              <li><a href="/logout">Logout</a></li>
          <% } else { %>
              <!-- Visible only when the client is not logged in -->
              <li><a href="/login">My Account</a></li>
          <% } %>
      </ul>
  </nav>
  
  </header>
